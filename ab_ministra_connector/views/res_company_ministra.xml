<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_company_form_ministra" model="ir.ui.view">
    <field name="name">res.company.form.ab_ministra_connector</field>
    <field name="model">res.company</field>
    <field name="inherit_id" ref="base.view_company_form"/>
    <field name="arch" type="xml">
      <xpath expr="//notebook" position="inside">
        <page string="Ministra IPTV">
          <group col="2">
            <group string="API Connection">
              <field name="ministra_api_base_url" placeholder="http://&lt;host&gt;:&lt;port&gt;/stalker_portal/api"/>
              <field name="ministra_api_username"/>
              <field name="ministra_api_password" password="True"/>
              <field name="ministra_api_timeout"/>
            </group>
          </group>

          <separator string="Connection Test"/>
          <group>
            <field name="ministra_last_test_ok" readonly="1"/>
            <field name="ministra_last_error" readonly="1" widget="text"/>
          </group>

          <button name="action_ministra_test_connection"
                  type="object"
                  string="Test Ministra"
                  class="oe_highlight"
                  groups="ab_ministra_connector.group_ab_ministra_admin"/>
        </page>
      </xpath>
    </field>
  </record>
</odoo>
