<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="view_asr_radius_settings_wizard" model="ir.ui.view">
    <field name="name">asr.radius.settings.wizard</field>
    <field name="model">asr.radius.settings</field>
    <field name="arch" type="xml">
      <form string="RADIUS Settings">
        <sheet>
          <group string="Vendors">
            <field name="asr_emit_mikrotik"/>
            <field name="asr_emit_cisco"/>
          </group>
          <group string="Cisco Policy Naming">
            <field name="asr_cisco_prefix_dl" placeholder="POLICY_DL_"/>
            <field name="asr_cisco_prefix_ul" placeholder="POLICY_UL_"/>
          </group>
        </sheet>
        <footer>
          <button name="action_save" type="object" string="Save" class="btn-primary"/>
          <button string="Close" special="cancel" class="btn-secondary"/>
        </footer>
      </form>
    </field>
  </record>

  <record id="action_asr_radius_settings_wizard" model="ir.actions.act_window">
    <field name="name">RADIUS Settings</field>
    <field name="res_model">asr.radius.settings</field>
    <field name="view_mode">form</field>
    <field name="target">current</field>
  </record>

  <!-- Lidhe këtë action me menunë tënde RADIUS → Configuration → Settings -->
  <menuitem id="menu_asr_radius_settings_wizard"
            name="Settings"
            parent="asr_radius_manager.menu_asr_radius_config"
            action="action_asr_radius_settings_wizard"
            sequence="10"/>
</odoo>
