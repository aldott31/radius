<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--
    Restrict "Create Invoice" button to Sales, Finance and Manager groups
    -->
    <record id="view_order_form_invoice_security" model="ir.ui.view">
        <field name="name">sale.order.form.invoice.security</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <!-- Add groups restriction to Create Invoice button -->
            <xpath expr="//button[@name='%(sale.action_view_sale_advance_payment_inv)d']" position="attributes">
                <attribute name="groups">asr_radius_manager.group_isp_sales,asr_radius_manager.group_isp_finance,asr_radius_manager.group_isp_manager</attribute>
            </xpath>
        </field>
    </record>
</odoo>
