<?xml version="1.0" encoding="UTF-8"?>
<odoo>

  <!-- List -->
  <record id="view_asr_radius_user_list" model="ir.ui.view">
    <field name="name">asr.radius.user.list</field>
    <field name="model">asr.radius.user</field>
    <field name="arch" type="xml">
      <tree string="RADIUS Users"
            decoration-muted="not active"
            decoration-success="radius_synced and not is_suspended"
            decoration-danger="not radius_synced"
            decoration-warning="is_suspended or last_sync_error">
        <field name="username"/>
        <field name="name"/>
        <field name="groupname" string="Planned Group"/>
        <field name="current_radius_group" string="Current RADIUS Group"/>
        <field name="current_framed_ip" string="IP (current)"/>
        <field name="current_interface" string="If (current)"/>
        <field name="subscription_id" options="{'no_open': False}"/>
        <field name="device_id" column_invisible="1"/>
        <field name="company_id" groups="base.group_multi_company"/>
        <field name="radius_synced" string="Synced"/>
        <field name="last_sync_date" string="Last Sync"/>
        <field name="active" column_invisible="1"/>
        <field name="is_suspended" column_invisible="1"/>
        <field name="last_sync_error" column_invisible="1"/>
      </tree>
    </field>
  </record>

  <!-- Form -->
  <record id="view_asr_radius_user_form" model="ir.ui.view">
    <field name="name">asr.radius.user.form</field>
    <field name="model">asr.radius.user</field>
    <field name="arch" type="xml">
      <form string="RADIUS User">
        <header>
          <button name="action_sync_to_radius" type="object" string="Sync to RADIUS"
                  class="btn-primary" groups="ab_radius_connector.group_ab_radius_admin"/>
          <button name="action_suspend" type="object" string="Suspend"
                  class="oe_secondary" groups="ab_radius_connector.group_ab_radius_admin"
                  invisible="is_suspended"/>
          <button name="action_reactivate" type="object" string="Reactivate"
                  class="oe_secondary" groups="ab_radius_connector.group_ab_radius_admin"
                  invisible="not is_suspended"/>
          <button name="action_remove_from_radius" type="object" string="Remove from RADIUS"
                  class="oe_highlight" groups="ab_radius_connector.group_ab_radius_admin"/>
          <!-- HEQUR action_provision_and_test sepse nuk ekziston nÃ« Python -->

          <!-- Disconnect button -->
          <button name="action_disconnect_user" type="object" string="Disconnect"
                  class="btn-warning" confirm="Send disconnect request to NAS for this user?"
                  groups="ab_radius_connector.group_ab_radius_admin" icon="fa-plug"/>
        </header>

        <sheet>
          <!-- Smart Buttons -->
          <div class="oe_button_box" name="button_box">
            <button type="object"
                    name="action_view_active_sessions"
                    class="oe_stat_button"
                    icon="fa-circle"
                    invisible="active_sessions_count == 0">
              <field name="active_sessions_count" widget="statinfo" string="Active"/>
            </button>
            <button type="object"
                    name="action_view_sessions"
                    class="oe_stat_button"
                    icon="fa-history">
              <field name="total_sessions_count" widget="statinfo" string="Sessions"/>
            </button>
            <button type="object"
                    name="action_view_sessions"
                    class="oe_stat_button"
                    icon="fa-clock-o"
                    invisible="not last_session_start">
              <div class="o_field_widget o_stat_info">
                <span class="o_stat_text">Last Login</span>
                <span class="o_stat_value">
                  <field name="last_session_start" widget="relative"/>
                </span>
              </div>
            </button>
            <button type="action"
                    name="%(action_asr_radius_pppoe_status)d"
                    class="oe_stat_button"
                    icon="fa-signal"
                    context="{'search_default_username': username}">
              <div class="o_field_widget o_stat_info">
                <span class="o_stat_text">PPPoE</span>
                <span class="o_stat_value">Status</span>
              </div>
            </button>
          </div>

          <widget name="web_ribbon" title="Not Synced" bg_color="text-bg-danger"
                  invisible="radius_synced"/>
          <widget name="web_ribbon" title="Synced" bg_color="text-bg-success"
                  invisible="not radius_synced or is_suspended"/>
          <widget name="web_ribbon" title="Suspended" bg_color="text-bg-warning"
                  invisible="not is_suspended"/>

          <group>
            <group string="Credentials">
              <field name="username" required="1" placeholder="customer123"/>
              <field name="radius_password" password="True" placeholder="Cleartext-Password"/>
              <field name="name" placeholder="Display name (optional)"/>
            </group>

            <group string="Plan &amp; Device">
              <field name="company_id" groups="base.group_multi_company"/>
              <field name="subscription_id" required="1"
                     domain="[('company_id','=',company_id)]"
                     options="{'no_create': True}"
                     placeholder="Select plan/package"/>
              <field name="device_id"
                     domain="[('company_id','=',company_id)]"
                     options="{'no_create': True}"
                     invisible="1"/>
              <field name="groupname" readonly="1" string="Planned Group"/>
              <field name="current_radius_group" readonly="1" string="Current RADIUS Group"/>
            </group>
          </group>

          <!-- LIVE Session Info -->
          <group string="Live Session (from radacct)">
            <group>
              <field name="pppoe_status" readonly="1"/>
              <field name="current_framed_ip" readonly="1" string="IP (current)"/>
            </group>
            <group>
              <field name="current_interface" readonly="1" string="Interface (current)"/>
              <field name="last_session_start" readonly="1" string="Login Time"/>
            </group>
          </group>

          <notebook>
            <page string="Status">
              <group>
                <group>
                  <field name="radius_synced" readonly="1"/>
                  <field name="last_sync_date" readonly="1"/>
                  <field name="active"/>
                  <field name="is_suspended" readonly="1"/>
                </group>
                <group>
                  <field name="last_sync_error" readonly="1" widget="text"
                         invisible="not last_sync_error"/>
                </group>
              </group>
            </page>
          </notebook>
        </sheet>

        <div class="oe_chatter">
          <field name="message_follower_ids"/>
          <field name="message_ids"/>
        </div>
      </form>
    </field>
  </record>

  <!-- Search -->
  <record id="view_asr_radius_user_search" model="ir.ui.view">
    <field name="name">asr.radius.user.search</field>
    <field name="model">asr.radius.user</field>
    <field name="arch" type="xml">
      <search string="Search RADIUS Users">
        <field name="username"/>
        <field name="name"/>
        <field name="subscription_id"/>

        <filter name="active" string="Active" domain="[('active', '=', True)]"/>
        <filter name="archived" string="Archived" domain="[('active', '=', False)]"/>
        <separator/>
        <filter name="f_synced" string="Synced" domain="[('radius_synced','=',True)]"/>
        <filter name="f_nsynced" string="Not Synced" domain="[('radius_synced','=',False)]"/>
        <filter name="f_err" string="Has Errors" domain="[('last_sync_error','!=',False)]"/>

        <group expand="0" string="Group By">
          <filter name="g_sub" string="Subscription" context="{'group_by':'subscription_id'}"/>
          <filter name="g_dev" string="Device" context="{'group_by':'device_id'}"/>
          <filter name="g_company" string="Company" context="{'group_by':'company_id'}"/>
          <filter name="g_synced" string="Sync Status" context="{'group_by':'radius_synced'}"/>
        </group>
      </search>
    </field>
  </record>

  <!-- Action -->
  <record id="action_asr_radius_user" model="ir.actions.act_window">
    <field name="name">RADIUS Users</field>
    <field name="res_model">asr.radius.user</field>
    <field name="view_mode">list,form</field>
    <field name="context">{'search_default_active': 1}</field>
    <field name="domain">[]</field>
    <field name="help" type="html">
      <p class="o_view_nocontent_smiling_face">
        Create your first RADIUS user
      </p>
      <p>
        Users authenticate via PPPoE, HotSpot, or other RADIUS-enabled services.<br/>
        Each user is linked to a subscription plan.
      </p>
    </field>
  </record>

  <menuitem id="menu_asr_radius_users"
            name="Users"
            parent="menu_asr_radius_root"
            action="action_asr_radius_user"
            sequence="30"/>

</odoo>