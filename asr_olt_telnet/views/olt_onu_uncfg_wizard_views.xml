<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <!-- LIST VIEW për rreshtat (olt.onu.uncfg.line) -->
  <record id="view_olt_onu_uncfg_line_list" model="ir.ui.view">
    <field name="name">olt.onu.uncfg.line.list</field>
    <field name="model">olt.onu.uncfg.line</field>
    <field name="arch" type="xml">
      <list string="Unregistered ONUs">
        <field name="technology"/>
        <field name="olt_index"/>
        <field name="model"/>
        <field name="mac"/>
        <field name="sn"/>
        <field name="raw"/>
        <button name="action_open_register"
                type="object"
                string="Register"
                class="btn-primary"/>
      </list>
    </field>
  </record>

  <!-- FORM VIEW për wizard-in (olt.onu.uncfg.wizard) -->
  <record id="view_olt_onu_uncfg_wizard_form" model="ir.ui.view">
    <field name="name">olt.onu.uncfg.wizard.form</field>
    <field name="model">olt.onu.uncfg.wizard</field>
    <field name="arch" type="xml">
      <form string="Unregistered ONUs" create="false" edit="false">
        <header>
          <button name="action_fetch" type="object" string="Fetch from OLT" class="btn-primary"/>
        </header>
        <sheet>
          <group>
            <field name="user_id" options="{'no_open': True}"/>
            <field name="olt_id" required="1" options="{'no_open': True}"/>
            <field name="tech"/>
          </group>
          <notebook>
            <page string="Unregistered ONUs">
              <!-- Përdor list_view_ref për Odoo 17/18 -->
              <field name="line_ids" nolabel="1"
                     context="{'list_view_ref': 'asr_olt_telnet.view_olt_onu_uncfg_line_list'}"/>
            </page>
            <page string="Raw Output">
              <field name="result_text" readonly="1" widget="text"/>
            </page>
          </notebook>
        </sheet>
        <footer>
          <button string="Close" special="cancel" class="btn-secondary"/>
        </footer>
      </form>
    </field>
  </record>

  <!-- ACTION: hap wizard-in në modal -->
  <record id="action_open_onu_uncfg_wizard" model="ir.actions.act_window">
    <field name="name">Unregistered ONUs</field>
    <field name="res_model">olt.onu.uncfg.wizard</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
  </record>

</odoo>
