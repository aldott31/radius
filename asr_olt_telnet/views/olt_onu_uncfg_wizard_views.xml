<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <!-- LIST VIEW p√´r rreshtat (olt.onu.uncfg.line) -->
  <record id="view_olt_onu_uncfg_line_list" model="ir.ui.view">
    <field name="name">olt.onu.uncfg.line.list</field>
    <field name="model">olt.onu.uncfg.line</field>
    <field name="arch" type="xml">
      <list string="Unregistered ONUs" create="false" edit="false" delete="false">
        <field name="technology" string="Tech"
               decoration-info="technology == 'gpon'"
               decoration-success="technology == 'epon'"/>
        <field name="olt_index" string="OLT Port"/>
        <field name="model" string="ONU Model"/>
        <field name="mac" string="MAC Address" optional="hide"/>
        <field name="sn" string="Serial Number"/>
        <button name="action_open_register"
                type="object"
                string="Register"
                icon="fa-play-circle"
                class="btn-primary"/>
      </list>
    </field>
  </record>

  <!-- FORM VIEW p√´r wizard-in (olt.onu.uncfg.wizard) -->
  <record id="view_olt_onu_uncfg_wizard_form" model="ir.ui.view">
    <field name="name">olt.onu.uncfg.wizard.form</field>
    <field name="model">olt.onu.uncfg.wizard</field>
    <field name="arch" type="xml">
      <form string="Unregistered ONUs" create="false" edit="false">
        <header>
          <button name="action_fetch" type="object" string="üîç Fetch from OLT" class="btn-primary"/>
        </header>
        <sheet>
          <div class="alert alert-info" role="alert" invisible="onu_count == 0">
            <strong>üì° Found <field name="onu_count" readonly="1" nolabel="1" class="d-inline"/> unregistered ONU(s)</strong><br/>
            Select an ONU and click <strong>Register</strong> to provision it.
          </div>

          <div class="alert alert-warning" role="alert" invisible="onu_count != 0">
            <strong>‚ÑπÔ∏è No unregistered ONUs found</strong><br/>
            Click <strong>üîç Fetch from OLT</strong> to scan for unregistered devices.
          </div>

          <group col="2">
            <group string="Filter Settings">
              <field name="user_id" string="Customer (optional)" options="{'no_open': True}"/>
              <field name="olt_id" required="1" string="OLT Device" options="{'no_open': True}"/>
            </group>
            <group string="Technology">
              <field name="tech" widget="radio"/>
            </group>
          </group>

          <notebook>
            <page string="üìã Unregistered ONUs" name="onu_list">
              <field name="line_ids" nolabel="1"
                     context="{'list_view_ref': 'asr_olt_telnet.view_olt_onu_uncfg_line_list'}">
                <list string="Unregistered ONUs" create="false" edit="false" delete="false">
                  <field name="technology" string="Tech"
                         decoration-info="technology == 'gpon'"
                         decoration-success="technology == 'epon'"/>
                  <field name="olt_index" string="OLT Port"/>
                  <field name="model" string="ONU Model"/>
                  <field name="mac" string="MAC Address" optional="hide"/>
                  <field name="sn" string="Serial Number"/>
                  <button name="action_open_register"
                          type="object"
                          string="Register"
                          icon="fa-play-circle"
                          class="btn-primary"/>
                </list>
              </field>
            </page>
            <page string="üìÑ Raw Output" name="raw_output">
              <field name="result_text" readonly="1" widget="text" nolabel="1"/>
            </page>
          </notebook>
        </sheet>
        <footer>
          <button string="Close" special="cancel" class="btn-secondary"/>
        </footer>
      </form>
    </field>
  </record>

  <!-- ACTION: hap wizard-in n√´ modal -->
  <record id="action_open_onu_uncfg_wizard" model="ir.actions.act_window">
    <field name="name">Unregistered ONUs</field>
    <field name="res_model">olt.onu.uncfg.wizard</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
  </record>

</odoo>
