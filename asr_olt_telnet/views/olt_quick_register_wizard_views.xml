<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_olt_onu_register_quick_form" model="ir.ui.view">
    <field name="name">olt.onu.register.quick.form</field>
    <field name="model">olt.onu.register.quick</field>
    <field name="arch" type="xml">
      <form string="Register ONU:" create="false">
        <sheet>
          <group>
            <group>
              <field name="interface" readonly="1"/>
              <field name="serial" readonly="1"/>
              <field name="name"/>
            </group>
            <group>
              <field name="onu_type" required="1"/>
              <field name="function_mode" required="1"/>
              <field name="customer_id" options="{'no_create': True}" required="1"/>
              <field name="access_device_id" required="1"/>
            </group>
          </group>

          <group string="ShÃ«rbimet">
            <group string="Internet">
              <field name="svc_internet"/>
              <field name="internet_vlan" invisible="not svc_internet"/>
              <field name="profile" invisible="not svc_internet"/>
              <field name="lan_selection" invisible="not svc_internet"/>
              <field name="dhcp_option82" invisible="not svc_internet"/>
            </group>
            <group string="TV">
              <field name="svc_tv"/>
              <field name="tv_vlan" invisible="not svc_tv"/>
            </group>
            <group string="Telefoni">
              <field name="svc_voice"/>
              <field name="voice_vlan" invisible="not svc_voice"/>
            </group>
            <group string="Data">
              <field name="svc_data"/>
              <field name="data_vlan" invisible="not svc_data"/>
            </group>
          </group>
        </sheet>
        <footer>
          <button name="action_register" type="object" string="Register" class="btn-primary"/>
          <button string="Close" class="btn-secondary" special="cancel"/>
        </footer>
      </form>
    </field>
  </record>
</odoo>
