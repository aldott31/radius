<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_olt_onu_register_quick_form" model="ir.ui.view">
    <field name="name">olt.onu.register.quick.form</field>
    <field name="model">olt.onu.register.quick</field>
    <field name="arch" type="xml">
      <form string="Register ONU" create="false">
        <sheet>
          <!-- ‚úÖ Success Info -->
          <div class="alert alert-info" role="alert" invisible="last_error">
            <strong>üì° Auto Registration</strong><br/>
            Free slot detected and ready to register on OLT.
          </div>

          <!-- ‚úÖ Error Display -->
          <div class="alert alert-danger" role="alert" invisible="not last_error">
            <strong>‚ùå Registration Failed (Attempt #<field name="registration_attempts" readonly="1" nolabel="1" class="d-inline"/>)</strong><br/>
            <field name="last_error" readonly="1" nolabel="1"/><br/><br/>
            <strong>üí° Fix the issue below and click "Register Now" to retry.</strong>
          </div>

          <group col="2">
            <group string="OLT Configuration (Auto-detected)">
              <field name="access_device_id" readonly="1" options="{'no_open': False}"/>
              <field name="interface" readonly="1"/>
              <field name="onu_slot" readonly="1"/>
              <field name="serial" readonly="1"/>
            </group>
            <group string="ONU Details">
              <field name="name" placeholder="Customer name or description"/>
              <field name="onu_type" required="1"/>
              <field name="function_mode" required="1"/>
              <field name="customer_id" options="{'no_create': True}" required="1"/>
            </group>
          </group>

          <group string="VLAN Configuration" col="2">
            <group>
              <field name="internet_vlan" required="1"
                     placeholder="Enter VLAN ID"/>
              <div class="text-muted" invisible="not access_device_id">
                <i class="fa fa-info-circle"/> Available:
                <field name="available_internet_vlans_display" nolabel="1" readonly="1" class="d-inline"/>
              </div>

              <field name="tv_vlan" placeholder="Enter TV VLAN ID (optional)"/>
              <div class="text-muted"
                   invisible="not access_device_id or available_tv_vlans_display == 'Not configured'">
                <i class="fa fa-info-circle"/> Available:
                <field name="available_tv_vlans_display" nolabel="1" readonly="1" class="d-inline"/>
              </div>

              <field name="voice_vlan" placeholder="Enter Voice VLAN ID (optional)"/>
              <div class="text-muted"
                   invisible="not access_device_id or available_voice_vlans_display == 'Not configured'">
                <i class="fa fa-info-circle"/> Available:
                <field name="available_voice_vlans_display" nolabel="1" readonly="1" class="d-inline"/>
              </div>
            </group>
            <group>
              <field name="speed_profile" required="1"/>
            </group>
          </group>

          <group string="VoIP Configuration" invisible="function_mode not in ['bridge_mcast_voip', 'router_mcast_voip']" col="2">
            <group>
              <field name="voip_userid" placeholder="e.g., 044310660"
                     required="function_mode in ['bridge_mcast_voip', 'router_mcast_voip']"/>
              <field name="voip_username" placeholder="e.g., 044310660"
                     required="function_mode in ['bridge_mcast_voip', 'router_mcast_voip']"/>
            </group>
            <group>
              <field name="voip_password" password="True"
                     required="function_mode in ['bridge_mcast_voip', 'router_mcast_voip']"/>
            </group>
          </group>

          <div class="alert alert-warning" role="alert">
            <strong>‚ö†Ô∏è Registration Command:</strong><br/>
            <code>interface <field name="interface_display" readonly="1" nolabel="1" class="d-inline"/></code><br/>
            <code>onu <field name="onu_slot" readonly="1" nolabel="1" class="d-inline"/> type <field name="onu_type" readonly="1" nolabel="1" class="d-inline"/> sn <field name="serial" readonly="1" nolabel="1" class="d-inline"/></code>
          </div>
        </sheet>
        <footer>
          <!-- ‚úÖ Back to List button (only if parent wizard exists) -->
          <button name="action_back_to_list" type="object" string="‚Üê Back to ONU List"
                  class="btn-secondary" icon="fa-arrow-left"
                  invisible="not uncfg_wizard_id"/>

          <!-- ‚úÖ Register/Retry button -->
          <button name="action_register" type="object" string="Register Now"
                  class="btn-primary" icon="fa-play-circle"
                  invisible="last_error"/>
          <button name="action_register" type="object" string="üîÑ Retry Registration"
                  class="btn-warning" icon="fa-refresh"
                  invisible="not last_error"/>

          <button string="Cancel" class="btn-secondary" special="cancel"/>
        </footer>
      </form>
    </field>
  </record>
</odoo>