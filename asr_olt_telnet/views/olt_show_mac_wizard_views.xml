<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_olt_show_mac_wizard" model="ir.ui.view">
    <field name="name">olt.show.mac.wizard.form</field>
    <field name="model">olt.show.mac.wizard</field>
    <field name="arch" type="xml">
      <form string="Show MAC on OLT" create="false" edit="false">
        <sheet>
          <group>
            <field name="user_id" options="{'no_open': True}"/>
            <field name="olt_id" required="1" options="{'no_open': True}"/>
            <field name="mac_address" placeholder="AA:BB:CC:DD:EE:FF" required="1"/>
          </group>
          <group string="Result">
            <field name="result_text" readonly="1" widget="text"/>
            <field name="status" readonly="1"/>
          </group>
        </sheet>
        <footer>
          <button name="action_run" type="object" string="Run 'show mac'" class="btn-primary" icon="fa-play"/>
          <button string="Close" special="cancel" class="btn-secondary"/>
        </footer>
      </form>
    </field>
  </record>

  <!-- ACTION (generic) -->
  <record id="action_open_olt_show_mac_wizard" model="ir.actions.act_window">
    <field name="name">Show MAC on OLT</field>
    <field name="res_model">olt.show.mac.wizard</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
  </record>

  <!-- ACTION pÃ«r butonin te asr.radius.user -->
  <record id="action_open_olt_show_mac_wizard_from_device" model="ir.actions.act_window">
    <field name="name">Show MAC on OLT</field>
    <field name="res_model">olt.show.mac.wizard</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
    <!-- context kalon nga butoni -->
  </record>
</odoo>
