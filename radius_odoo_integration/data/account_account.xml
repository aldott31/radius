<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Income and Expense Accounts -->
    <data noupdate="1">
        <!-- Income Account for RADIUS Services -->
        <record id="account_income_radius_services" model="account.account">
            <field name="name">RADIUS Services Income</field>
            <field name="code">400100</field>
            <field name="account_type">income</field>
            <field name="reconcile">False</field>
        </record>

        <!-- Expense Account for RADIUS Services (COGS) -->
        <record id="account_expense_radius_services" model="account.account">
            <field name="name">RADIUS Services Expense</field>
            <field name="code">500100</field>
            <field name="account_type">expense</field>
            <field name="reconcile">False</field>
        </record>
    </data>

    <!-- Property assignments (without noupdate to allow updates) -->
    <data>
        <!-- Set Income Account on RADIUS Product Category -->
        <record id="property_account_income_categ_radius" model="ir.property">
            <field name="name">property_account_income_categ_id</field>
            <field name="fields_id" search="[('model', '=', 'product.category'), ('name', '=', 'property_account_income_categ_id')]"/>
            <field name="res_id" eval="'product.category,' + str(ref('product_category_radius_service'))"/>
            <field name="value_reference" eval="'account.account,' + str(ref('account_income_radius_services'))"/>
            <field name="type">many2one</field>
        </record>

        <!-- Set Expense Account on RADIUS Product Category -->
        <record id="property_account_expense_categ_radius" model="ir.property">
            <field name="name">property_account_expense_categ_id</field>
            <field name="fields_id" search="[('model', '=', 'product.category'), ('name', '=', 'property_account_expense_categ_id')]"/>
            <field name="res_id" eval="'product.category,' + str(ref('product_category_radius_service'))"/>
            <field name="value_reference" eval="'account.account,' + str(ref('account_expense_radius_services'))"/>
            <field name="type">many2one</field>
        </record>
    </data>
</odoo>
