        <field name="groups"
               eval="[(4, ref('odoo_website_helpdesk.helpdesk_user'))]"/>
        <field name="domain_force">['|', '|',
                ('assigned_user_id', '=', user.id),
                ('team_id.team_lead_id', '=', user.id),
                ('team_id.member_ids', 'in', [user.id])
        ]</field>
