<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- WIZARD FORM VIEW -->
    <record id="view_crm_work_group_wizard_form" model="ir.ui.view">
        <field name="name">crm.work.group.wizard.form</field>
        <field name="model">crm.work.group.wizard</field>
        <field name="arch" type="xml">
            <form string="Create Work Group">
                <group>
                    <field name="name" placeholder="e.g. Team Tirana North"/>
                    <field name="technician_ids" widget="many2many_tags"
                           options="{'no_create': True, 'no_open': True}"
                           placeholder="Select technicians..."/>
                </group>
                <footer>
                    <button name="action_create_group" string="Create Group"
                            type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- WIZARD ACTION -->
    <record id="action_crm_work_group_wizard" model="ir.actions.act_window">
        <field name="name">Create Work Group</field>
        <field name="res_model">crm.work.group.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="view_crm_work_group_wizard_form"/>
    </record>

</odoo>
