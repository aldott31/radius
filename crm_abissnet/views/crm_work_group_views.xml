<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- TREE VIEW -->
    <record id="view_crm_work_group_tree" model="ir.ui.view">
        <field name="name">crm.work.group.tree</field>
        <field name="model">crm.work.group</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="address"/>
                <field name="city"/>
                <field name="manager_id"/>
                <field name="technician_count"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="view_crm_work_group_form" model="ir.ui.view">
        <field name="name">crm.work.group.form</field>
        <field name="model">crm.work.group</field>
        <field name="arch" type="xml">
            <form string="Work Group">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options="{'terminology': 'archive'}"/>
                        </button>
                    </div>

                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="e.g. Team Tirana North" required="1"/>
                        </h1>
                    </div>

                    <group>
                        <group string="Group Information">
                            <field name="manager_id" widget="many2one" options="{'no_create': True}"/>
                            <field name="technician_count" readonly="1"/>
                            <field name="company_id" invisible="1"/>
                        </group>
                        <group string="Work Location">
                            <field name="address" placeholder="Work area/zone"/>
                            <field name="street" placeholder="Street"/>
                            <field name="street2" placeholder="Street 2"/>
                            <field name="city" placeholder="City"/>
                            <field name="zip" placeholder="ZIP"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Technicians" name="technicians">
                            <field name="technician_ids" widget="many2many_tags" options="{'no_create': True, 'no_open': True}"/>
                        </page>
                        <page string="Notes" name="notes">
                            <field name="notes" placeholder="Additional notes about this work group..."/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- KANBAN VIEW -->
    <record id="view_crm_work_group_kanban" model="ir.ui.view">
        <field name="name">crm.work.group.kanban</field>
        <field name="model">crm.work.group</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="address"/>
                <field name="city"/>
                <field name="manager_id"/>
                <field name="technician_count"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click" style="padding: 12px; border: 1px solid #ddd; border-radius: 4px; background: white;">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title" style="font-size: 16px;">
                                        <i class="fa fa-users text-primary me-2"/> <field name="name"/>
                                    </strong>
                                </div>
                            </div>
                            <div class="o_kanban_record_body mt-2">
                                <div style="font-size: 13px; margin-bottom: 8px;">
                                    <i class="fa fa-map-marker text-danger me-1"/>
                                    <span t-if="record.city.raw_value">
                                        <field name="city"/>
                                        <span t-if="record.address.raw_value"> - </span>
                                    </span>
                                    <span t-if="record.address.raw_value">
                                        <field name="address"/>
                                    </span>
                                </div>
                                <div style="font-size: 12px; color: #666;">
                                    <i class="fa fa-user me-1"/>
                                    Manager: <field name="manager_id"/>
                                </div>
                                <div style="font-size: 12px; color: #666; margin-top: 4px;">
                                    <i class="fa fa-wrench me-1"/>
                                    <field name="technician_count"/> Technician<span t-if="record.technician_count.raw_value != 1">s</span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- SEARCH VIEW -->
    <record id="view_crm_work_group_search" model="ir.ui.view">
        <field name="name">crm.work.group.search</field>
        <field name="model">crm.work.group</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="address"/>
                <field name="city"/>
                <field name="manager_id"/>
                <field name="technician_ids"/>
                <filter string="My Groups" name="my_groups" domain="[('manager_id', '=', uid)]"/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Manager" name="group_manager" context="{'group_by': 'manager_id'}"/>
                    <filter string="City" name="group_city" context="{'group_by': 'city'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- ACTION -->
    <record id="action_crm_work_group" model="ir.actions.act_window">
        <field name="name">Work Groups</field>
        <field name="res_model">crm.work.group</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{
            'search_default_active': 1,
            'form_view_ref': 'crm_abissnet.view_crm_work_group_form'
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a Work Group
            </p>
            <p>
                Organize field technicians into work groups by area or project.<br/>
                Assign technicians and track their work locations.
            </p>
        </field>
    </record>

    <!-- Override Create button to open wizard -->
    <record id="action_crm_work_group_create_wizard" model="ir.actions.server">
        <field name="name">Create Work Group</field>
        <field name="model_id" ref="model_crm_work_group"/>
        <field name="binding_model_id" ref="model_crm_work_group"/>
        <field name="binding_view_types">list,kanban</field>
        <field name="state">code</field>
        <field name="code">
action = {
    'type': 'ir.actions.act_window',
    'name': 'Create Work Group',
    'res_model': 'crm.work.group.wizard',
    'view_mode': 'form',
    'target': 'new',
    'views': [(False, 'form')],
}
        </field>
    </record>

    <!-- MENU -->
    <menuitem id="menu_crm_work_groups"
              name="Groups"
              parent="menu_isp_management_root"
              action="action_crm_work_group"
              sequence="11"
              groups="asr_radius_manager.group_isp_field_tech,asr_radius_manager.group_isp_manager"/>

</odoo>
