<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!-- List (ish-Tree) -->
  <record id="view_crm_onu_tree" model="ir.ui.view">
    <field name="name">crm.onu.tree</field>
    <field name="model">crm.onu</field>
    <field name="arch" type="xml">
      <list string="ONUs (CPE)">
        <field name="name"/>
        <field name="serial_number"/>
        <field name="function_mode"/>
        <field name="ethernet_ports"/>
        <field name="profile"/>
        <field name="active"/>
        <field name="company_id" groups="base.group_multi_company"/>
      </list>
    </field>
  </record>

  <!-- Form (pa ndryshime) -->
  <record id="view_crm_onu_form" model="ir.ui.view">
    <field name="name">crm.onu.form</field>
    <field name="model">crm.onu</field>
    <field name="arch" type="xml">
      <form string="ONU (CPE)">
        <sheet>
          <group>
            <group>
              <field name="name"/>
              <field name="serial_number"/>
              <field name="function_mode"/>
            </group>
            <group>
              <field name="ethernet_ports"/>
              <field name="profile"/>
              <field name="active"/>
              <field name="company_id" groups="base.group_multi_company"/>
            </group>
          </group>
          <group>
            <field name="notes" nolabel="1" placeholder="Shënime..."/>
          </group>
        </sheet>
        <chatter/>
      </form>
    </field>
  </record>

  <!-- Search (pa ndryshime) -->
  <record id="view_crm_onu_search" model="ir.ui.view">
    <field name="name">crm.onu.search</field>
    <field name="model">crm.onu</field>
    <field name="arch" type="xml">
      <search string="Kërko ONUs">
        <field name="name"/>
        <field name="serial_number"/>
        <field name="profile"/>
        <filter string="Bridge" name="mode_bridge" domain="[('function_mode','=','bridge')]"/>
        <filter string="Router" name="mode_router" domain="[('function_mode','=','router')]"/>
        <filter string="Active" name="active_true" domain="[('active','=',True)]"/>
        <filter string="Inactive" name="active_false" domain="[('active','=',False)]"/>
      </search>
    </field>
  </record>

  <!-- Action: view_mode 'list,form' -->
  <record id="action_crm_onu" model="ir.actions.act_window">
    <field name="name">ONUs (CPE)</field>
    <field name="res_model">crm.onu</field>
    <field name="view_mode">list,form</field>
    <field name="help" type="html">
      <p>Menaxho pajisjet e abonentit (ONT/ONU).</p>
    </field>
  </record>

  <!-- Menu (siç ishte) -->

    <!-- ONUs (CPE) nën Management -->
  <menuitem id="menu_crm_onu"
          name="ONUs (CPE)"
          parent="crm_abissnet.menu_management"
          action="action_crm_onu"
          sequence="36"/>

</odoo>
